generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Pelicula {
  id_pelicula   Int      @id @default(autoincrement())
  id_user       Int
  usuario       Usuario  @relation("UsuarioPeliculas", fields: [id_user], references: [id_user], onDelete: Cascade) // Relación con Usuario
  nombre        String
  descripcion   String
  calificacion  Float
  miniatura     String
  id_categoria  Int?
  
  // Relación con Categoría (uno a muchos)
  categoria     Categoria? @relation(fields: [id_categoria], references: [id_categoria])

  // Relación con Comentarios (uno a muchos)
  comentarios   Comentario[]

  // Relación con Calificaciones (uno a muchos)
  calificaciones Calificacion[]
}

model Usuario {
  id_user          Int      @id @default(autoincrement())
  nombre_usuario   String?  @unique
  fecha_registro   DateTime? @default(now())
  correo           String?  @unique
  clave            String?
  rol              Int?
  fecha_nacimiento DateTime?

  // Relación con Pelicula (uno a muchos)
  peliculas        Pelicula[]  @relation("UsuarioPeliculas")

  // Relación con Comentarios (uno a muchos)
  comentarios      Comentario[]

  // Relación con Calificaciones (uno a muchos)
  calificaciones   Calificacion[]
}

model Categoria {
  id_categoria Int      @id @default(autoincrement())
  nombre       String

  // Relación con Película (uno a muchos)
  peliculas    Pelicula[]
}

model Comentario {
  id_comentario    Int      @id @default(autoincrement())
  comentario       String?
  fecha_comentario DateTime @default(now())

  // Relación con Usuario (muchos a uno)
  usuario          Usuario? @relation(fields: [id_user], references: [id_user], onDelete: Cascade)
  id_user          Int?

  // Relación con Película (muchos a uno)
  pelicula         Pelicula? @relation(fields: [id_pelicula], references: [id_pelicula], onDelete: Cascade)
  id_pelicula      Int?
}

model Calificacion {
  id_calificacion     Int      @id @default(autoincrement())
  calificacion        Float?
  fecha_calificacion  DateTime @default(now())

  // Relación con Usuario (muchos a uno)
  usuario             Usuario  @relation(fields: [id_user], references: [id_user], onDelete: Cascade)
  id_user             Int
  
  // Relación con Película (muchos a uno)
  pelicula            Pelicula? @relation(fields: [id_pelicula], references: [id_pelicula], onDelete: Cascade)
  id_pelicula         Int?
}